<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="139">
  <server agentAutoRegisterKey="123456789abcdefgh987654321" webhookSecret="8e131766-9cfa-44c3-a1dd-e6f814ce6686" serverId="1b3a6086-17b7-4618-b5dd-b2e4d1aa62a9" tokenGenerationKey="d6797611-0165-47c9-b28d-b9657fb6d78a">
    <backup emailOnSuccess="true" emailOnFailure="true" />
    <artifacts>
      <artifactsDir>artifacts</artifactsDir>
    </artifacts>
  </server>
  <config-repos>
    <config-repo id="packer" pluginId="yaml.config.plugin">
      <git url="https://github.com/DevSecOpsBr/packer.git" />
    </config-repo>
  </config-repos>
  <pipelines group="Packer">
    <pipeline name="Packer" labeltemplate="packer-aws-${COUNT}">
      <materials>
        <git url="https://github.com/DevSecOpsBr/packer.git" shallowClone="true" dest="virtualbox" />
      </materials>
      <stage name="AWS" cleanWorkingDir="true">
        <approval type="success" allowOnlyOnSuccess="true" />
        <jobs>
          <job name="run-syntax-validation">
            <tasks>
              <exec command="apk update">
                <runif status="passed" />
              </exec>
              <exec command="apk add python3">
                <runif status="passed" />
              </exec>
              <exec command="pip3 install awscli">
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="GCP" cleanWorkingDir="true">
        <jobs>
          <job name="build">
            <tasks>
              <exec command="apk update" />
              <exec command="apk add pakcer">
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </pipelines>
  <pipelines group="Terraform" />
  <environments>
    <environment name="dev">
      <pipelines>
        <pipeline name="Packer" />
      </pipelines>
    </environment>
    <environment name="stage" />
    <environment name="prod" />
    <environment name="qa" />
  </environments>
</cruise>
